<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AgregarAviso">

    <ImageView
        android:id="@+id/imageView35"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/st_logo" />

    <TextView
        android:id="@+id/textView51"
        android:layout_width="278dp"
        android:layout_height="34dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="26dp"
        android:text="Agregar un Aviso"
        android:textAlignment="center"
        android:textColor="@color/STomas"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView35"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView52"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="63dp"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="63dp"
        android:text="Ingrese los datos del aviso"
        android:textAlignment="center"
        android:textColor="@color/STomas"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView35" />

    <EditText
        android:id="@+id/txtTituloAvisoA"
        android:layout_width="309dp"
        android:layout_height="59dp"
        android:layout_marginStart="46dp"
        android:layout_marginTop="51dp"
        android:layout_marginEnd="56dp"
        android:background="@drawable/edit_text_background"
        android:ems="10"
        android:hint="Titulo del aviso"
        android:inputType="text"
        android:textAlignment="center"
        android:textColor="@color/STomas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView52" />

    <EditText
        android:id="@+id/txtDescripAvisoA"
        android:layout_width="307dp"
        android:layout_height="56dp"
        android:layout_marginStart="49dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="55dp"
        android:background="@drawable/edit_text_background"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Descripcion del aviso"
        android:inputType="textMultiLine"
        android:textAlignment="center"
        android:textColor="@color/STomas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtFechaAvisoA"
        tools:ignore="RtlCompat" />

    <Spinner
        android:id="@+id/spinnerCatAvisoA"
        android:layout_width="313dp"
        android:layout_height="68dp"
        android:layout_marginStart="49dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="49dp"
        android:background="@drawable/edit_text_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtDescripAvisoA" />

    <Button
        android:id="@+id/btnImagenAvisoA"
        android:layout_width="116dp"
        android:layout_height="52dp"
        android:layout_marginStart="147dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="148dp"
        android:background="@drawable/button_background"
        android:text="Imagen"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerCatAvisoA" />

    <Button
        android:id="@+id/btnAgregarAvisoA"
        android:layout_width="306dp"
        android:layout_height="59dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/button_background"
        android:text="Agregar Aviso"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnImagenAvisoA" />

    <EditText
        android:id="@+id/txtFechaAvisoA"
        android:layout_width="300dp"
        android:layout_height="67dp"
        android:layout_marginStart="49dp"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="62dp"
        android:background="@drawable/edit_text_background"
        android:ems="10"
        android:inputType="none"
        android:focusable="false"
        android:hint="Seleccionar fecha"
        android:textAlignment="center"
        android:textColor="@color/STomas"
        android:onClick="mostrarDatePicker"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTituloAvisoA" />


</androidx.constraintlayout.widget.ConstraintLayout>