<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AgregarUsuario">

    <ImageView
        android:id="@+id/imageView24"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/st_logo" />

    <TextView
        android:id="@+id/textView33"
        android:layout_width="277dp"
        android:layout_height="40dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="41dp"
        android:layout_marginEnd="16dp"
        android:text="Agregar un Usuario"
        android:textAlignment="center"
        android:textColor="@color/STomas"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView24"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView34"
        android:layout_width="383dp"
        android:layout_height="30dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="51dp"
        android:layout_marginEnd="13dp"
        android:text="Datos del Registro"
        android:textAlignment="center"
        android:textColor="@color/STomas"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView24" />

    <EditText
        android:id="@+id/editTextText3"
        android:layout_width="359dp"
        android:layout_height="67dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/edit_text_background"
        android:ems="10"
        android:hint="ContraseÃ±a"
        android:inputType="text"
        android:textAlignment="center"
        android:textColor="@color/STomas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextEmailAddress" />

    <EditText
        android:id="@+id/editTextTextEmailAddress"
        android:layout_width="359dp"
        android:layout_height="67dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="53dp"
        android:layout_marginEnd="13dp"
        android:background="@drawable/edit_text_background"
        android:ems="10"
        android:hint="correo_usuario.cst"
        android:inputType="textEmailAddress"
        android:textAlignment="center"
        android:textColor="@color/STomas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView34" />

    <RadioGroup
        android:id="@+id/radioGroupTipoUsuario"
        android:layout_width="389dp"
        android:layout_height="160dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="10dp"
        android:checkedButton="@id/rdbAdministrador"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView35">

        <RadioButton
            android:id="@+id/rdbEstudiante"
            android:layout_width="347dp"
            android:layout_height="65dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="26dp"
            android:layout_marginBottom="1dp"
            android:background="@drawable/edit_text_background"
            android:text="Estudiante"
            android:textAlignment="center"
            android:textColor="@color/STomas" />

        <RadioButton
            android:id="@+id/rdbAdministrador"
            android:layout_width="347dp"
            android:layout_height="65dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="26dp"
            android:background="@drawable/edit_text_background"
            android:text="Administrador"
            android:textAlignment="center"
            android:textColor="@color/STomas" />

    </RadioGroup>

    <TextView
        android:id="@+id/textView35"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="121dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="122dp"
        android:text="Tipo de Usuario"
        android:textAlignment="center"
        android:textColor="@color/STomas"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextText3" />

    <Button
        android:id="@+id/btnAgregarUser"
        android:layout_width="302dp"
        android:layout_height="57dp"
        android:layout_marginStart="54dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="55dp"
        android:layout_marginBottom="41dp"
        android:background="@drawable/button_background"
        android:text="Agregar Usuario"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroupTipoUsuario" />
</androidx.constraintlayout.widget.ConstraintLayout>