<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="180dp"
        android:layout_height="160dp"
        android:layout_marginStart="113dp"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/st_logo" />

    <Button
        android:id="@+id/btnRecorrerST"
        android:layout_width="290dp"
        android:layout_height="60dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_background"
        android:text="Recorrer ST"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblTipoUsuario" />

    <Button
        android:id="@+id/btnAvisosG"
        android:layout_width="290dp"
        android:layout_height="60dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/button_background"
        android:text="Avisos Generales"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnRecorrerST" />

    <Button
        android:id="@+id/btnAvisosDAE"
        android:layout_width="290dp"
        android:layout_height="60dp"
        android:layout_marginStart="62dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/button_background"
        android:text="Espacio DAE"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAvisosG" />

    <Button
        android:id="@+id/btnAvisosCA"
        android:layout_width="290dp"
        android:layout_height="60dp"
        android:layout_marginStart="62dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/button_background"
        android:text="Centro Aprendizaje"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAvisosDAE" />

    <Button
        android:id="@+id/btnDocumentos"
        android:layout_width="290dp"
        android:layout_height="60dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/button_background"
        android:text="Documentos"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAvisosCA" />

    <TextView
        android:id="@+id/lblTipoUsuario"
        android:layout_width="299dp"
        android:layout_height="32dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="16dp"
        android:text="Bienvenido"
        android:textAlignment="center"
        android:textColor="@color/STomas"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView6" />


</androidx.constraintlayout.widget.ConstraintLayout>