<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AvisoActualizado">

    <!-- Logo ImageView -->

    <!-- Aviso Actualizado TextView con AutoSize -->

    <ImageView
        android:id="@+id/imageView39"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.15"
        app:srcCompat="@drawable/st_logo" />

    <!-- Check ImageView -->

    <!-- Título Aviso TextView con AutoSize -->

    <!-- Volver a Gestión Button -->

    <!-- Guideline - Top 10% -->

    <TextView
        android:id="@+id/textView57"
        android:layout_width="320dp"
        android:layout_height="49dp"
        android:layout_marginTop="36dp"
        android:text="Aviso actualizado"
        android:textAlignment="center"
        android:textColor="@color/STomas"
        android:textStyle="bold"
        app:autoSizeMaxTextSize="34sp"
        app:autoSizeMinTextSize="18sp"
        app:autoSizeStepGranularity="2sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView39" />

    <ImageView
        android:id="@+id/imageView40"
        android:layout_width="221dp"
        android:layout_height="204dp"
        android:layout_marginTop="64dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView57"
        app:layout_constraintWidth_percent="0.4"
        app:srcCompat="@drawable/check" />

    <Button
        android:id="@+id/btnVolverAvisosE"
        android:layout_width="321dp"
        android:layout_height="69dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="49dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/button_background"
        android:text="Volver a Gestión"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView40" />

    <!-- Guideline - Bottom 90% -->

</androidx.constraintlayout.widget.ConstraintLayout>
